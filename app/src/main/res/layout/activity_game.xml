<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageView
        android:src="@drawable/back"
        android:id="@+id/game_home"
        android:layout_width="0dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_weight="1"
        android:paddingRight="35dp"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:id="@+id/game_score"
        android:text="32"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/life_image1"
            android:src="@drawable/heart_red"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/life_image2"
            android:layout_weight="1"
            android:src="@drawable/heart_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/life_image3"
            android:layout_weight="1"
            android:src="@drawable/heart_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
<RelativeLayout
    android:id="@+id/game_linear"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/lajitong"
                android:background="@drawable/lajitong1"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <ImageView
                android:layout_above="@id/lajitong"
                android:src="@drawable/lajitong2"
                android:id="@+id/kehuishou2"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/qita1"
                android:background="@drawable/lajitong1"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <ImageView
                android:layout_above="@id/qita1"
                android:src="@drawable/lajitong2"
                android:id="@+id/qita2"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </RelativeLayout>
        <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/youhai1"
            android:background="@drawable/lajitong1"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
            <ImageView
                android:layout_above="@id/youhai1"
                android:src="@drawable/lajitong2"
                android:id="@+id/youhai2"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
    </RelativeLayout>
        <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/chuyu1"
            android:background="@drawable/lajitong1"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
            <ImageView
                android:layout_above="@id/chuyu1"
                android:src="@drawable/lajitong2"
                android:id="@+id/chuyu2"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>